<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading -->
        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to put your Skill on "
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Subtext -->
        <TextView
            android:id="@+id/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add at least 9 photos, Every one is waiting to see what you have brought for them over here !"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <!-- GridLayout for 9 images -->
        <GridLayout
            android:id="@+id/imageGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- 9 image placeholders -->
            <!-- Use same ImageView with different ids -->
            <ImageView
                android:id="@+id/image_0"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/image_placeholder"

                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_black_24dp"
                android:contentDescription="Upload Photo"

                />

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/image_placeholder"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_black_24dp"
                android:contentDescription="Upload Photo"/>

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/image_placeholder"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_black_24dp"
                android:contentDescription="Upload Photo"/>

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/image_placeholder"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_black_24dp"
                android:contentDescription="Upload Photo"/>

            <ImageView
                android:id="@+id/image_4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/image_placeholder"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_black_24dp"
                android:contentDescription="Upload Photo"/>

            <ImageView
                android:id="@+id/image_5"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/image_placeholder"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_black_24dp"
                android:contentDescription="Upload Photo"/>

            <ImageView
                android:id="@+id/image_6"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/image_placeholder"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_black_24dp"
                android:contentDescription="Upload Photo"/>

            <ImageView
                android:id="@+id/image_7"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/image_placeholder"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_black_24dp"
                android:contentDescription="Upload Photo"/>

            <ImageView
                android:id="@+id/image_8"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/image_placeholder"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_black_24dp"
                android:contentDescription="Upload Photo"/>
        </GridLayout>

        <!-- Submit button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="24dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>
